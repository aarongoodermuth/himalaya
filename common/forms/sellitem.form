<!--provides a description, product id, condition dropdown, other relevant info and 
submit button for adding sale item-->
<form name="sellitem" action="" method="post">
<h3>Sell an Item!</h3>
<table name="sale_table">
<tr>
<td>Item Description: </td>
<td><input type="text" name="desc"/></td>
</tr>
<tr>
<td>Product ID (?): </td>
<td><input type="text" name="prod_id"/></td>
</tr>
<tr>
<tr>
<td>Category: </td>
<td>
<select value="category" class="span3" name="catlist">
<option>&nbsp;</option>
<option value="1">Home & Office</option>
<option value="6">&nbsp;&nbsp;|-- Home Improvement</option>
<option value="7">&nbsp;&nbsp;|-- Lawn &amp; Garden</option>
<option value="2">Sports & Outdoors</option>
<option value="8">&nbsp;&nbsp;|-- Sports Equipment</option>
<option value="17">&nbsp;&nbsp;&nbsp;&nbsp;|-- Golf</option>
<option value="18">&nbsp;&nbsp;&nbsp;&nbsp;|-- Curling</option>
<option value="19">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|-- Curling Stones</option>
<option value="9">&nbsp;&nbsp;|-- Camping Gear</option>
<option value="3">Electronics</option>
<option value="10">&nbsp;&nbsp;|-- Computers</option>
<option value="15">&nbsp;&nbsp;&nbsp;&nbsp;|-- Laptops</option>
<option value="16">&nbsp;&nbsp;&nbsp;&nbsp;|-- Desktops</option>
<option value="11">&nbsp;&nbsp;|-- MP3 Players</option>
<option value="12">&nbsp;&nbsp;|-- Tablets</option>
<option value="20">&nbsp;&nbsp;|-- Video Games</option>
<option value="21">&nbsp;&nbsp;|-- Appliances</option>
<option value="4">Clothing</option>
<option value="13">&nbsp;&nbsp;|-- Shoes</option>
<option value="14">&nbsp;&nbsp;|-- Formal Wear</option>
<option value="5">Books</option>
<option value="22">Pet Care</option>
<option value="23">Food & Drink</option>
<option value="24">&nbsp;&nbsp;|-- Beverages</option>
<option value="26">&nbsp;&nbsp;&nbsp;&nbsp;|-- Alcoholic Beverages</option>
<option value="25">&nbsp;&nbsp;|-- Food</option>
</select>
</td>
</tr>
<tr>
<td>Item Condition:</td>
<td><select class ="span3" onchange="review_combo()">
<option value="">&nbsp;</option>
<option value="0">New</option>
<option value="1">Used - Like New</option>
<option value="2">Used - Very Good</option>
<option value="3">Used - Good</option>
<option value="4">Used - Acceptable</option>
<option value="5">Used - For Parts Only</option>
</select></td>
</tr>
<tr>
<td>URL (optional): </td>
<td><input type="text" name="address"/></td>
</tr>
<tr>
<td>Shipping ZIP Code: </td>
<td><input type="text" name="zip"/></td>
</tr>
<tr>
<div class="row">
  <div class="span2">
    <td>Sale Type: </td><td>
    <label class="radio">
      <input id="saletype1" type="radio" name="saletype" value="A">Auction</input>
    </label>
    <label class="radio">
      <input id="saletype2" type="radio" name="saletype" value="S">Sale</input>
    </label>
	</td>
  </div>
</div>
</tr>
</table>
<input value="Submit" type="submit"/>
</form>